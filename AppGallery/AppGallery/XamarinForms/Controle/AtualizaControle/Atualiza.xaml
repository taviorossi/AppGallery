<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controle.AtualizaControle.Atualiza"
             xmlns:controls="clr-namespace:AppGallery.Resources.Controls"
             Title="RefreshView"
             >
    <ContentPage.Content>
        <RefreshView RefreshColor="Red" IsRefreshing="False" Refreshing="RefreshView_Refreshing">
            <ScrollView>
                <StackLayout>
                    <controls:TitleComponentView
                        Name="RefreshView"
                        Properties="IsRefreshing, RefreshColor"
                        Events="Refreshing"
                        Observation="Barra de Rolagem - ScrollView, ListView, CollectionView, CarouselView"
                        />
                    <Label Text="RefreshView" />
                    <Label Text="Propriedades: IsRefreshing, RefreshColor" />
                    <Label Text="Evento(s): Refreshing " />
                    <Label Text="Observação: Barra de Rolagem - ScrollView, ListView, CollectionView, CarouselView " />
                    <Label Text="Não atualizado!" x:Name="lblStatus" TextColor="Red" FontSize="24" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>