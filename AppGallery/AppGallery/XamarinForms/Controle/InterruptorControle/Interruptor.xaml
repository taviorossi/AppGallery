<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controle.InterruptorControle.Interruptor"
             Padding="10"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsToggled" />
            <Switch HorizontalOptions="Start" IsToggled="True" />

            <Label Text="OnColor, ThumbColor" />
            <Switch HorizontalOptions="Start" OnColor="LightBlue" ThumbColor="Blue" />

            <Label Text="Evento: Toggled" />
            <Switch HorizontalOptions="Start" Toggled="Switch_Toggled" />
            <Label x:Name="lblInformativo" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>