<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controle.DataSelecaoControle.DataSelecao">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Date, MinimumDate, MaximumDate" />
            <DatePicker Date="03/06/2020" MinimumDate="03/03/2020" MaximumDate="03/10/2020" />

            <Label Text="Format, CharacterSpacing" />
            <DatePicker Format="dd/MM/yyyy" CharacterSpacing="5" />

            <Label Text="TextColor, FontFamily, FontSize, FontAttributes" />
            <DatePicker Format="dd/MM/yyyy" TextColor="Accent" FontFamily="sans-serif-light" FontSize="24" FontAttributes="Italic" />

            <Label Text="Eventos: " />
            <DatePicker Format="dd/MM/yyyy" DateSelected="DatePicker_DateSelected" />
            <Label x:Name="lblInformativo" Text=" - " />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>