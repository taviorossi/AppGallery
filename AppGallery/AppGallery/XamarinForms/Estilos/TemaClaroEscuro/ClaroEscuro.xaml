<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.TemaClaroEscuro.ClaroEscuro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Light/Dark Theme" />

            <Label Text="Light" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" />
            <Label Text="(Claro)" HorizontalOptions="CenterAndExpand" FontSize="10" />

            <Frame Margin="0, 80, 0, 0" BorderColor="Black" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" >
                <Label Text="A" FontSize="100" HorizontalTextAlignment="Center" TextColor="Black" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>