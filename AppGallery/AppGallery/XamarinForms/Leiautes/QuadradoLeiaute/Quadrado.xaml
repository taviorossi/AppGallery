<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Leiautes.QuadradoLeiaute.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Frame HorizontalOptions="Center" CornerRadius="100" Padding="0" IsClippedToBounds="True">
                <BoxView Color="Green" WidthRequest="150" HeightRequest="150"/>
            </Frame>
            
            <Frame Padding="0">
                <StackLayout BackgroundColor="White">
                    <Label Text="Steven Spielberg" TextColor="White" FontSize="24" Margin="20, 20, 20, 10" HorizontalOptions="Center" />
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />
                    <Label Text="Diretor de vários filmes famosos." Margin="20" />
                </StackLayout>
            </Frame>
            
            <Frame BackgroundColor="White" HasShadow="False" CornerRadius="1000" BorderColor="White">
                <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>